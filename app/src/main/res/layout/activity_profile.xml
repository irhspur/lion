<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="phonedirectory.lion.com.lion.Profile">

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:text="@string/contact_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/contact_header"/>

        <View style="@style/Divider"
            android:layout_marginBottom="5dp"
            android:layout_below="@id/contact_header"
            android:id="@+id/divider_contact"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/name_profile"
            android:id="@+id/name_title"
            android:padding="5dp"
            android:layout_below="@id/divider_contact"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/sample_info"
            android:id="@+id/name"
            android:padding="5dp"
            android:layout_below="@id/divider_contact"
            android:layout_toRightOf="@id/name_title"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/address_title"
            android:id="@+id/address_title"
            android:padding="5dp"
            android:layout_below="@id/name_title"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/sample_info"
            android:id="@+id/address"
            android:padding="5dp"
            android:layout_below="@id/name"
            android:layout_toRightOf="@id/address_title"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/phone_title"
            android:id="@+id/phone_title"
            android:padding="5dp"
            android:layout_below="@id/address_title"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Home Phone not Available"
            android:id="@+id/phone"
            android:padding="5dp"
            android:layout_below="@id/address_title"
            android:layout_toRightOf="@id/phone_title"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Mobile"
            android:id="@+id/mobile_title"
            android:padding="5dp"
            android:layout_below="@id/phone_title"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Number not Available"
            android:id="@+id/mobile"
            android:padding="5dp"
            android:layout_below="@id/phone_title"
            android:layout_toRightOf="@id/mobile_title"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="E-mail"
            android:id="@+id/email_title"
            android:padding="5dp"
            android:layout_below="@id/mobile_title"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="E-mail not Available"
            android:id="@+id/email"
            android:padding="5dp"
            android:layout_below="@id/mobile_title"
            android:layout_toRightOf="@id/email_title"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Blood Group"
            android:id="@+id/blood_title"
            android:padding="5dp"
            android:layout_below="@id/email_title"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Blood Group not Available"
            android:id="@+id/blood"
            android:padding="5dp"
            android:layout_below="@id/email_title"
            android:layout_toRightOf="@id/blood_title"
            />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">
        <TextView
            android:text="@string/club_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />

        <View style="@style/Divider"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/sample_info"
            android:id="@+id/club"
            android:padding="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/sample_info"
            android:id="@+id/location"
            android:padding="5dp"/>

    </LinearLayout>

</LinearLayout>
